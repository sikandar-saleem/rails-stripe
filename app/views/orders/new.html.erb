<%= form_with model: @order do |f| %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>



  <div class="field">
    <%= f.label :card_number %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :cvv %>
    <%= f.number_field :cvv %>
  </div>

  <div class="field">
    <%= f.label :month %>
    <%= f.number_field :exp_month, min:1, max:12 %>
  </div>

  <div class="field">
    <%= f.label :exp_year %>
    <%= f.number_field :year, min: 2023 %>
  </div>

  <%= f.submit %>

<% end %>