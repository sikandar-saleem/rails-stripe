<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<table id="products" border="1">
  <thead>
    <th>Name</th>
    <th>Price</th>
    <th>Action</th>
  </thead>
  <tbody id="products">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </tbody>
</table>

<%= link_to "New product", new_product_path %>
